

<%- include("partials/header") %>



<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog</div>
    <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method=POST>
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Text</label>
            <textarea name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>
        </div>
        <div class="field">
            
            <input class="ui violet basic button" type="submit">        
        </div>
        <div class="field">
            <a class="ui basic button purple" href="/blogs/">Back</a>
        </div>
        
        

    </form>
</div>

<%- include("partials/footer") %>